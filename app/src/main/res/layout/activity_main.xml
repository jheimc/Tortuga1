<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tortugas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.042"
            android:id="@+id/txtCabecera"/>
    <ImageView
            android:layout_width="321dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tmntraph"
            android:id="@+id/tortuga"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCabecera"/>
    <RadioGroup
            android:layout_width="319dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:orientation="horizontal" android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.486"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tortuga"
            app:layout_constraintVertical_bias="0.786">
        <RadioButton
                android:text="leo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_leo" android:layout_weight="1"
                android:onClick="radiobuttonClick"/>
        <RadioButton
                android:text="don"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_don" android:layout_weight="1"
                android:onClick="radiobuttonClick"/>
        <RadioButton
                android:text="mike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_mike" android:layout_weight="1"
                android:onClick="radiobuttonClick"/>
        <RadioButton
                android:text="ralph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_ralph" android:layout_weight="1"
                android:onClick="radiobuttonClick"/>
    </RadioGroup>


</android.support.constraint.ConstraintLayout>